<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TẠO TÀI KHOẢN"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Tên đăng nhập"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <EditText
        android:id="@+id/edtCreateTenDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:background="@drawable/login_input_text"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Địa chỉ E-Mail"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <EditText
        android:id="@+id/edtCreateEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:background="@drawable/login_input_text"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Mật khẩu"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <EditText
        android:id="@+id/edtCreateMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:background="@drawable/login_input_text"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Quyền"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <Spinner
        android:id="@+id/spnCreateQuyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:background="@drawable/login_input_text"
        android:textSize="15sp"
        android:textColor="#777676"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#2196F3"
            app:cornerRadius="5dp"
            app:strokeColor="#D1CFCF"
            app:strokeWidth="1dp"
            android:text="CREATE"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/btnCancelAccount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#F44336"
            app:cornerRadius="5dp"
            app:strokeColor="#D1CFCF"
            app:strokeWidth="1dp"
            android:text="CANCEL"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>